<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
          {{#each Upload}}
          {{#if requested}}
          <h5 id = "contactAlert">***Please contact {{this.contact}}***</h5>
          {{/if}}
          {{/each}}
          <h3 class="card-title">My list</h3>
          <ul>
            {{#each Upload}}
            {{#if available}}
            {{#unless requested}}
            <b>Product Name: {{this.product_name}} </b> <br>
            <b>Condition: </b>{{this.condition}} <br>
            <b>Description: </b>{{this.description}} <br>
            <b>Image: </b><br><img src={{this.Image.url}} id="img" alt="no image uploaded" />
            <br>
            <form action="/api/availability/{{id}}" method="POST">
              <button class="btn btn-danger float-right tradeWith">confirm</button>
            </form>
            <br><br>
            <hr>
            {{/unless}}
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>